
/* 页面容器 */
.page-container.data-v-6fc0550b {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

/* 状态卡片 */
.status-card.data-v-6fc0550b {
  margin: 32rpx 24rpx;
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.3);
}
.status-icon.data-v-6fc0550b {
  margin-right: 24rpx;
}
.status-emoji.data-v-6fc0550b {
  font-size: 48rpx;
}
.status-info.data-v-6fc0550b {
  flex: 1;
}
.status-text.data-v-6fc0550b {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}
.status-desc.data-v-6fc0550b {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}
.countdown-container.data-v-6fc0550b {
  margin-top: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
}
.countdown-label.data-v-6fc0550b {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}
.countdown-time.data-v-6fc0550b {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
}

/* 卡片通用样式 */
.order-info-card.data-v-6fc0550b,
.goods-card.data-v-6fc0550b,
.amount-card.data-v-6fc0550b {
  margin: 32rpx 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}
.card-header.data-v-6fc0550b {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f7;
}
.card-title.data-v-6fc0550b {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

/* 订单信息 */
.info-item.data-v-6fc0550b {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f7;
}
.info-item.data-v-6fc0550b:last-child {
  border-bottom: none;
}
.info-label.data-v-6fc0550b {
  font-size: 30rpx;
  color: #8a8a8a;
  font-weight: 400;
}
.info-value.data-v-6fc0550b {
  font-size: 30rpx;
  color: #1d1d1f;
  font-weight: 500;
  max-width: 400rpx;
  text-align: right;
  word-break: break-all;
}

/* 商品信息 */
.goods-list.data-v-6fc0550b {
  padding: 0 32rpx 32rpx;
}
.goods-item.data-v-6fc0550b {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f7;
}
.goods-item.data-v-6fc0550b:last-child {
  border-bottom: none;
}
.goods-img-container.data-v-6fc0550b {
  margin-right: 24rpx;
  display: flex;
}
.goods-img.data-v-6fc0550b {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #f5f5f7;
  border: 1rpx solid #e5e5ea;
}
.goods-img-placeholder.data-v-6fc0550b {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f5f5f7 0%, #e5e5ea 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #d1d1d6;
}
.placeholder-text.data-v-6fc0550b {
  font-size: 22rpx;
  color: #8a8a8a;
}
.goods-info.data-v-6fc0550b {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 160rpx;
}
.goods-name.data-v-6fc0550b {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
  line-height: 1.4;
}
.goods-qty.data-v-6fc0550b {
  font-size: 26rpx;
  color: #8a8a8a;
  background: #f5f5f7;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

/* 费用明细 */
.amount-item.data-v-6fc0550b {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f7;
}
.amount-item.data-v-6fc0550b:last-child {
  border-bottom: none;
}
.amount-item.total.data-v-6fc0550b {
  background: #f8f9fa;
  border-top: 2rpx solid #e5e5ea;
}
.amount-label.data-v-6fc0550b {
  font-size: 30rpx;
  color: #8a8a8a;
  font-weight: 400;
}
.amount-item.total .amount-label.data-v-6fc0550b {
  color: #1d1d1f;
  font-weight: 600;
}
.amount-value.data-v-6fc0550b {
  font-size: 30rpx;
  color: #1d1d1f;
  font-weight: 500;
}
.amount-value.discount.data-v-6fc0550b {
  color: #34c759;
}
.amount-value.final.data-v-6fc0550b {
  font-size: 36rpx;
  color: #ff3b30;
  font-weight: 600;
}

/* 金额颜色统一规范 */
.refund-amount.data-v-6fc0550b {
  color: #34c759 !important; /* 退款金额：绿色 */
}
.paid-amount.data-v-6fc0550b {
  color: #ff3b30 !important; /* 实付金额：红色 */
}

/* 操作按钮 */
.action-buttons.data-v-6fc0550b {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 24rpx 24rpx env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #f5f5f7;
}
.button-group.data-v-6fc0550b {
  display: flex;
  gap: 24rpx;
}
.action-btn.data-v-6fc0550b {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}
.action-btn.primary.data-v-6fc0550b {
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}
.action-btn.secondary.data-v-6fc0550b {
  background: #f5f5f7;
  border: 1rpx solid #e5e5ea;
}
.action-btn.data-v-6fc0550b:active {
  transform: scale(0.98);
}
.btn-text.data-v-6fc0550b {
  font-size: 32rpx;
  font-weight: 600;
}
.action-btn.primary .btn-text.data-v-6fc0550b {
  color: #ffffff;
}
.action-btn.secondary .btn-text.data-v-6fc0550b {
  color: #1d1d1f;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
.goods-img.data-v-6fc0550b,
  .goods-img-placeholder.data-v-6fc0550b {
    width: 140rpx;
    height: 140rpx;
}
.goods-info.data-v-6fc0550b {
    height: 140rpx;
}
.goods-name.data-v-6fc0550b {
    font-size: 30rpx;
}
.status-card.data-v-6fc0550b {
    padding: 32rpx 24rpx;
}
}
