
.queue-setting-page.data-v-0f25ed10 {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.theme-list.data-v-0f25ed10 {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.theme-item.data-v-0f25ed10 {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.theme-image.data-v-0f25ed10 {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.theme-img.data-v-0f25ed10 {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.theme-info.data-v-0f25ed10 {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.theme-name.data-v-0f25ed10 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}
.queue-duration.data-v-0f25ed10 {
  font-size: 28rpx;
  color: #666;
  line-height: 1.3;
}
.setting-icon.data-v-0f25ed10 {
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon.data-v-0f25ed10 {
  font-size: 32rpx;
  color: #999;
}
.empty-state.data-v-0f25ed10 {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.popup-content.data-v-0f25ed10 {
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}
.popup-title.data-v-0f25ed10 {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}
.popup-subtitle.data-v-0f25ed10 {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}
.input-section.data-v-0f25ed10 {
  margin-bottom: 40rpx;
}
.input-label.data-v-0f25ed10 {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}
.duration-input.data-v-0f25ed10 {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.duration-input.data-v-0f25ed10:focus {
  border-color: #007aff;
}
.popup-buttons.data-v-0f25ed10 {
  display: flex;
  gap: 20rpx;
}
.cancel-btn.data-v-0f25ed10,
.confirm-btn.data-v-0f25ed10 {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}
.cancel-btn.data-v-0f25ed10 {
  background-color: #f5f5f5;
  color: #666;
}
.confirm-btn.data-v-0f25ed10 {
  background-color: #007aff;
  color: #fff;
}
